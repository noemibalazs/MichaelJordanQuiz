<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#3E2723</item>
    </style>

    <style name="question_view">Question View
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#E91E63</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="circle">Circle
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">#E91E63</item>
    </style>


</resources>
